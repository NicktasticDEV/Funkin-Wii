{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build WiiFunkin",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Run WiiFunkin",
      "type": "shell",
      "dependsOn": "Build WiiFunkin",
      "command": "make run",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
