{
    "version": 8,
    "configurePresets": [
        {
            "name": "wii",
            "displayName": "Wii",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "environment": {
                "PATH": "/opt/homebrew/opt/gnu-tar/libexec/gnubin:/usr/local/opt/gnu-tar/libexec/gnubin:$penv{PATH}"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "$env{DEVKITPRO}/cmake/Wii.cmake",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5",
                "FIN_PLATFORM": "wii"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "wii-debug",
            "configurePreset": "wii",
            "displayName": "Default Build",
            "environment": {
                "PATH": "/opt/homebrew/opt/gnu-tar/libexec/gnubin:/usr/local/opt/gnu-tar/libexec/gnubin:$penv{PATH}"
            }
        }
    ]
}